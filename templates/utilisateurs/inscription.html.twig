{% extends 'base.html.twig' %}

{% block title %} Inscription!{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
{% endblock %}

{% block main %}
    <form action="/{{ path('inscription') }}" method="post">
        <div>
            <label for="pseudo">Pseudo :</label>
            <input type="text" id="idPseudo" name="user_pseudo">
        </div>
        <div>
            <label for="username">Prenom :</label>
            <input type="text" id="idUsername" name="user_username">
        </div>
        <div>
            <label for="name">Nom :</label>
            <input type="text" id="idName" name="user_name">
        </div>
        <div>
            <label for="phone">Téléphone :</label>
            <input type="email" id="idPhone" name="user_phone">
        </div>
        <div>
            <label for="mail">Mail :</label>
            <input type="email" id="idMail" name="user_mail">
        </div>
        <div>
            <label for="passwordFirst">Mot de passe :</label>
            <input type="email" id="idPasswordFirst" name="user_passwordFirst">
        </div>
        <div>
            <label for="passwordSecond">confirmer le mot de passe :</label>
            <input type="email" id="idPasswordSecond" name="user_passwordSecond">
        </div>

        <button type="submit">Enregistrer</button>
        <button><a href="{{ path('entree') }}">Annuler</a></button>

    </form>
{% endblock %}
